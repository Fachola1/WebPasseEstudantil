@page
@model RegisterModel
@{
    ViewData["Title"] = "Registre-se";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/Register.css" /> <!-- Adicionando o mesmo estilo usado na página de login -->

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Yinka Enoch Adedokun">
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row main-content bg-success text-center">
            <div class="col-md-4 text-center company__info">
                <span class="company__logo"><h2><span class="fa fa-android"></span></h2></span>
                <h4 class="company_title">Easy Pass</h4>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                    <div class="row">
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="form-group">
                                <input asp-for="Input.Email" class="form__input" placeholder="Email">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.Password" class="form__input" placeholder="Senha">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.ConfirmPassword" class="form__input" placeholder="Confirme a senha">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn">Criar conta</button>
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <p>Já tem uma conta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Faça login aqui</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
